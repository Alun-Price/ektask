<header class="relative items-center justify-center h-screen lg:flex lg:justify-between lg:items-center lg:px-3 md:py-3 md:w-full">
        <nav class="flex items-center justify-between px-4 py-3 mt-4 lg:p-0 shrink-0">
            <div class="flex items-center"> 
                <a class="mr-6" href="{{ siteUrl }}">
                    <img src="{{ siteUrl }}static/images/LogoMobile.svg">
                </a>
                {# Nav Links#}
                <div class="items-center justify-between hidden lg:flex">
                    <ul class="flex flex-col p-4 mt-4 font-medium lg:p-0 lg:flex-row lg:mt-0 lg:space-x-4">
                        {% for link in navigation.navLinks.all() %}
                        {% set destination = link.linkDestination.one() %}
                        {% set dropdown = link.dropdownToggle %}
                        {% if dropdown.contains('dropdownYes') %}
                        
                        <li>
                            <a href="{{ destination.url}}" class="relative text-sm font-bold after:content-arrowDownIcon after:inline-block after:ml-1"> {{ link.linkText   }}</a>   
                        </li>
                        {% else %}
                        <li>
                            <a href="{{ destination.url}}" class="inline-block text-sm font-bold"> {{ link.linkText   }}</a>
                        </li>
                        {% endif %}
                        {% endfor %}
                    </ul>
                </div>
                {#Mobile Hamburger #} 
                <div class="absolute flex items-center right-6 lg:hidden">
                    <div>
                        <svg class="fill-current text-primaryorange-400 hover:text-primaryorange-600" xmlns="http://www.w3.org/2000/svg" width="24" height="15" viewBox="0 0 24 15" fill="none">
                        <g id="Menu Icon">
                            <line id="Line 3" y1="1" x2="24" y2="1" stroke="#F26839" stroke-width="2"></line>
                            <line id="Line 4" y1="7" x2="24" y2="7" stroke="#F26839" stroke-width="2"></line>
                            <line id="Line 5" y1="14" x2="24" y2="14" stroke="#F26839" stroke-width="2"></line>
                        </g>
                        </svg>
                    </div>
                </div>
                {# CTA Button #}
                <div class="absolute items-center hidden space-x-6 lg:flex lg:right-6">    
                    <a href="#" type="button" class="text-white text-sm bg-primaryorange-400 hover:bg-primaryorange-600 font-bold leading-[30px] px-3 py-1 text-center rounded-[35px] align-baseline hidden lg:block">Request a Demo</a>
                </div>
            </div>
        </nav>
    </header>